{
  "manifest_version": 3,
  "name": "URL Safety Checker",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "management"
  ],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}
